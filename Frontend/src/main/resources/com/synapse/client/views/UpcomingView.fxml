<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<BorderPane styleClass="content-area"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.synapse.client.controller.UpcomingController"
            prefHeight="400.0" prefWidth="600.0">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <padding>
                <Insets bottom="20.0"/>
            </padding>
            <Label text="Upcoming"
                   style="-fx-font-size: 48px; -fx-font-weight: bold;-fx-text-fill: #212529ff;-fx-line-spacing: 56px;"/>
            <Label text="5" fx:id="labelCount" styleClass="content-count">
                <HBox.margin>
                    <Insets left="5.0"/>
                </HBox.margin>
            </Label>

            <Region HBox.hgrow="ALWAYS"/>

            <Button text="+ Add New Task" styleClass="add-task-button"
                    onAction="#onAddTaskClicked"/>
        </HBox>
    </top>
    <center>
        <ListView fx:id="taskListView" styleClass="task-list-view" />
    </center>
</BorderPane>

