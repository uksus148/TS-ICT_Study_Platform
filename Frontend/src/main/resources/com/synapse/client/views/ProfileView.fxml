<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.synapse.client.controller.ProfileController"
      spacing="20" style="-fx-background-color: white; -fx-padding: 30;">

    <HBox alignment="CENTER_LEFT" spacing="10">
        <FontIcon iconLiteral="bi-person-circle" iconSize="32" iconColor="#7c7c7c"/>
        <Label text="Edit Profile" style="-fx-font-size: 48px; -fx-font-weight: bold;-fx-text-fill: #212529ff;-fx-line-spacing: 56px;"/>
    </HBox>

    <VBox spacing="5">
        <Label text="Full Name" styleClass="editor-label"/>
        <TextField fx:id="nameField" promptText="Enter your name" styleClass="editor-input"/>
    </VBox>

    <VBox spacing="5">
        <Label text="Email Address" styleClass="editor-label"/>
        <TextField fx:id="emailField" promptText="Enter your email" styleClass="editor-input"/>
    </VBox>

    <VBox spacing="5">
        <Label text="New Password" styleClass="editor-label"/>
        <PasswordField fx:id="passwordField" promptText="Leave empty to keep current" styleClass="editor-input"/>
    </VBox>

    <VBox spacing="5">
        <Label text="Confirm Password" styleClass="editor-label"/>
        <PasswordField fx:id="confirmPasswordField" promptText="Repeat new password" styleClass="editor-input"/>
    </VBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="Save Changes" onAction="#onSave" styleClass="editor-button">
            <graphic><FontIcon iconLiteral="bi-check" iconColor="#7c7c7c"/></graphic>
        </Button>

        <Button text="Logout" onAction="#onLogout" styleClass="editor-button-white">
            <graphic><FontIcon iconLiteral="bi-box-arrow-right" iconColor="#7c7c7c"/></graphic>
        </Button>
    </HBox>

</VBox>