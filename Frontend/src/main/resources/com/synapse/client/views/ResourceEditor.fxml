<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<?import javafx.scene.layout.Region?>
<VBox fx:id="resourceEditor" spacing="15" style="-fx-background-color: white; -fx-border-color: #dee2e6; -fx-border-width: 0 0 0 1;"
      prefWidth="300" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.synapse.client.controller.ResourceEditorController">

    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <HBox alignment="CENTER_LEFT">
        <Label text="New Resource" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button onAction="#onClose" style="-fx-background-color: transparent;">
            <graphic><FontIcon iconLiteral="bi-x" iconSize="16"/></graphic>
        </Button>
    </HBox>

    <Label text="Resource Name"/>
    <TextField fx:id="nameField" promptText="Enter file name"/>

    <Label text="File / Link"/>
    <HBox spacing="10">
        <TextField fx:id="pathField" promptText="File path or URL (https://...)" HBox.hgrow="ALWAYS"/>
        <Button text="..." onAction="#onChooseFile"/>
    </HBox>

    <Button text="Upload Resource" onAction="#onSave" maxWidth="Infinity" style="-fx-background-color: #0d6efd; -fx-text-fill: white;"/>
</VBox>