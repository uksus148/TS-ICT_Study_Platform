<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.synapse.client.controller.GroupDetailsController"
            prefHeight="600.0" prefWidth="800.0">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 10;">
            <Button onAction="#onBack" styleClass="btn-secondary">
                <graphic>
                    <FontIcon iconLiteral="bi-arrow-left" iconSize="20"/>
                </graphic>
            </Button>
            <Label fx:id="groupNameLabel" text="Group Name" style="-fx-font-size: 48px; -fx-font-weight: bold;-fx-text-fill: #212529ff;-fx-line-spacing: 56px;"/>
        </HBox>
    </top>

    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE">

            <Tab text="Tasks">
                <graphic><FontIcon iconLiteral="bi-check2-square"/></graphic>
                <VBox spacing="10" style="-fx-padding: 15;">
                    <HBox alignment="CENTER_RIGHT">
                        <Button text="New Task" onAction="#onAddTask" style="-fx-background-color: #0d6efd; -fx-text-fill: white;">
                            <graphic><FontIcon iconLiteral="bi-plus" iconColor="white"/></graphic>
                        </Button>
                    </HBox>
                    <ListView fx:id="tasksListView" VBox.vgrow="ALWAYS"/>
                </VBox>
            </Tab>

            <Tab text="Resources">
                <graphic><FontIcon iconLiteral="bi-folder2-open"/></graphic>
                <VBox spacing="10" style="-fx-padding: 15;">
                    <HBox alignment="CENTER_RIGHT">
                        <Button text="Upload File" onAction="#onUploadFile">
                            <graphic><FontIcon iconLiteral="bi-cloud-upload"/></graphic>
                        </Button>
                    </HBox>
                    <ListView fx:id="resourcesListView" VBox.vgrow="ALWAYS"/>
                </VBox>
            </Tab>

            <Tab text="Members">
                <graphic><FontIcon iconLiteral="bi-people-fill"/></graphic>
                <VBox spacing="10" style="-fx-padding: 15;">
                    <HBox alignment="CENTER_RIGHT">
                        <Button text="Invite Member" onAction="#onInviteMember" style="-fx-background-color: #198754; -fx-text-fill: white;">
                            <graphic><FontIcon iconLiteral="bi-person-plus-fill" iconColor="white"/></graphic>
                        </Button>
                    </HBox>
                    <ListView fx:id="membersListView" VBox.vgrow="ALWAYS"/>
                </VBox>
            </Tab>
            <Tab text="Analytics">
                <graphic><FontIcon iconLiteral="bi-pie-chart-fill"/></graphic>
                <VBox alignment="CENTER" spacing="20">
                    <Label text="Task Completion Status" style="-fx-font-size: 18px;"/>
                    <PieChart fx:id="tasksPieChart" title="Progress"/>
                </VBox>
            </Tab>

        </TabPane>
    </center>
</BorderPane>